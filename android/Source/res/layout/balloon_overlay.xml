<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal" android:paddingLeft="10dip"
	android:minWidth="200dip" android:id="@+id/balloon_main_layout"
	android:paddingTop="0dip" android:paddingRight="0dip">
	<LinearLayout android:id="@+id/leftwindow"
		android:orientation="vertical" android:layout_width="200dp"  android:paddingTop="4dp"
			android:paddingLeft="15dp"
		android:layout_height="wrap_content" android:background="@drawable/info_window">
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/balloon_item_title"
			android:text="balloon_item_title" android:ellipsize="end"
			android:textSize="16sp" android:textStyle="bold" android:singleLine="true" android:textColor="#FFFFFFFF"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/balloon_item_subtitle"
			android:text="balloon_item_title" android:ellipsize="end"
		android:textSize="12sp" android:singleLine="true" android:textColor="#FFFFFFFF"></TextView>

	</LinearLayout>

	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/info_window_right"
		android:id="@+id/info_window_right"></ImageView>

</LinearLayout>
